# Asymmetric Investment Research Workstation
# Copy this file to .env and configure with your values

# ==============================================================================
# REQUIRED: SEC EDGAR Configuration
# ==============================================================================
# User-Agent for SEC EDGAR API requests
# Format: "AppName/Version (your-email@domain.com)"
# The SEC requires a valid contact email
SEC_IDENTITY="Asymmetric/1.0 (your-email@domain.com)"

# ==============================================================================
# OPTIONAL: AI API Keys
# ==============================================================================
# Gemini API key for AI-powered analysis
GEMINI_API_KEY=""

# Anthropic API key for Claude analysis (optional second opinion)
ANTHROPIC_API_KEY=""

# ==============================================================================
# OPTIONAL: Storage Paths (defaults work for most setups)
# ==============================================================================
# SQLite database for theses and decisions
# ASYMMETRIC_DB_PATH="./data/asymmetric.db"

# Directory for SEC bulk data downloads (~500MB)
# ASYMMETRIC_BULK_DIR="./data/bulk"

# Directory for response caching
# ASYMMETRIC_CACHE_DIR="./data/cache"

# ==============================================================================
# OPTIONAL: SEC Rate Limiting (defaults are conservative)
# ==============================================================================
# Requests per second (default: 5.0, SEC limit is 10 but graylisting risk)
# ASYMMETRIC_SEC_RATE_LIMIT="5.0"

# Burst allowance for rate limiter
# ASYMMETRIC_SEC_BURST="2"

# Maximum backoff in seconds when rate limited
# ASYMMETRIC_SEC_MAX_BACKOFF="60"

# Initial backoff in seconds
# ASYMMETRIC_SEC_INITIAL_BACKOFF="1.0"

# ==============================================================================
# OPTIONAL: Gemini AI Configuration
# ==============================================================================
# Token count warning threshold (default: 180000)
# ASYMMETRIC_GEMINI_TOKEN_WARNING="180000"

# Token cliff threshold where pricing doubles (default: 200000)
# ASYMMETRIC_GEMINI_TOKEN_CLIFF="200000"

# Cache TTL in seconds (default: 600 = 10 minutes)
# ASYMMETRIC_GEMINI_CACHE_TTL="600"

# Maximum output tokens (default: 8192)
# ASYMMETRIC_GEMINI_MAX_OUTPUT="8192"

# ==============================================================================
# OPTIONAL: MCP Server Configuration
# ==============================================================================
# Default port for MCP HTTP server
# ASYMMETRIC_MCP_PORT="8765"

# Port range for automatic port selection (start)
# ASYMMETRIC_MCP_PORT_START="8765"

# Port range for automatic port selection (end)
# ASYMMETRIC_MCP_PORT_END="8785"

# ==============================================================================
# MCP Configuration
# ==============================================================================
ENABLE_TOOL_SEARCH=true
